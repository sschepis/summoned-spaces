# Production Environment Configuration for Summoned Spaces
# Copy this file to .env.production and update with your actual values

# Node Environment
NODE_ENV=production
PORT=8080

# Database Configuration
# For Linode Managed Database:
# DATABASE_URL=postgresql://username:password@lin-xxxx-xxxx-pgsql-primary.servers.linodedb.net:5432/summoned_spaces?sslmode=require

# For self-hosted PostgreSQL (Docker Compose):
DATABASE_URL=postgresql://summoned:your_secure_password@postgres:5432/summoned_spaces
DB_USER=summoned
DB_PASSWORD=your_secure_password

# Security Secrets (Generate secure random strings)
SESSION_SECRET=your-very-secure-session-secret-min-32-chars
JWT_SECRET=your-very-secure-jwt-secret-min-32-chars

# Redis Configuration (optional but recommended)
REDIS_URL=redis://:your_redis_password@redis:6379
REDIS_PASSWORD=your_redis_password

# Application Settings
APP_NAME="Summoned Spaces"
APP_URL=https://yourdomain.com

# Email Configuration (if needed)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# EMAIL_FROM=noreply@yourdomain.com

# File Upload Settings
MAX_FILE_SIZE=104857600  # 100MB in bytes
UPLOAD_DIR=/app/uploads

# Logging
LOG_LEVEL=info
LOG_DIR=/app/logs

# External Services (if applicable)
# OPENAI_API_KEY=your-openai-api-key
# STRIPE_SECRET_KEY=your-stripe-secret-key
# GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_SOCIAL_LOGIN=false
MAINTENANCE_MODE=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# CORS Settings
CORS_ORIGIN=https://yourdomain.com
CORS_CREDENTIALS=true

# Monitoring (optional)
# SENTRY_DSN=https://xxxx@sentry.io/xxxx
# NEW_RELIC_LICENSE_KEY=xxxx

# Backup Settings
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE="0 2 * * *"  # 2 AM daily